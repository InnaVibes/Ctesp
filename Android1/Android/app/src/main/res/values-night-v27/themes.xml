<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.RipoffSteam" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Surface Colors -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/status_bar_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>

        <!-- Text Colors - CRITICAL FOR DARK THEME -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

        <!-- Menu Colors -->
        <item name="colorControlNormal">@color/menu_icon_dark</item>
        <item name="colorControlActivated">@color/purple_200</item>
        <item name="colorControlHighlight">@color/ripple_dark</item>

        <!-- Popup Colors -->
        <item name="popupMenuStyle">@style/PopupMenuStyle.Dark</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle.Dark</item>

        <!-- Additional Dark Theme Properties -->
        <item name="colorError">#CF6679</item>
        <item name="colorOnError">@color/black</item>

        <!-- CardView background for dark theme -->
        <item name="cardViewStyle">@style/CardViewDarkStyle</item>

        <!-- Spinner Colors for Dark Theme -->
        <item name="colorBackgroundFloating">@color/surface_dark</item>
    </style>
</resources>