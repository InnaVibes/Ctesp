<resources>

    <!-- Custom Rating Bar Style -->
    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorPrimaryDark">@color/purple_200</item>
        <item name="colorControlActivated">@color/purple_500</item>
        <item name="android:progressTint">@color/rating_star_filled</item>
        <item name="android:progressBackgroundTint">@color/rating_star_empty</item>
        <item name="android:secondaryProgressTint">@color/rating_star_half</item>
    </style>

    <!-- Base App Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/purple_500</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>

    <!-- Navigation View Style -->
    <style name="NavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">@style/NavigationMenuTextAppearance</item>
        <item name="itemIconTint">@color/navigation_menu_item_color</item>
        <item name="itemTextColor">@color/navigation_menu_item_color</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <!-- Navigation Menu Text Appearance -->
    <style name="NavigationMenuTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Card Style -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text_light</item>
        <item name="backgroundTint">@color/purple_500</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Spinner Style -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background_adaptive</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:popupBackground">?attr/colorSurface</item>
    </style>

    <!-- Text Styles -->
    <style name="HeaderTextStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubheaderTextStyle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="BodyTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="CaptionTextStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- Search View Style -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
        <item name="searchIcon">@drawable/ic_browse</item>
        <item name="closeIcon">@android:drawable/ic_menu_close_clear_cancel</item>
    </style>

    <!-- Achievement Item Style -->
    <style name="AchievementItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Switch Style -->
    <style name="SwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/purple_500</item>
        <item name="trackTint">@color/purple_200</item>
    </style>

    <!-- Checkbox Style -->
    <style name="CheckboxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/purple_500</item>
    </style>

</resources>