<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme - Adapts to system settings -->
    <style name="Theme.RipoffSteam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Surface Colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/status_bar_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/surface_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>

        <!-- Menu Colors -->
        <item name="colorControlNormal">@color/menu_icon_light</item>
        <item name="colorControlActivated">@color/purple_500</item>
        <item name="colorControlHighlight">@color/ripple_light</item>

        <!-- Popup Colors -->
        <item name="popupMenuStyle">@style/PopupMenuStyle.Light</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle.Light</item>

        <!-- Error Colors -->
        <item name="colorError">#B00020</item>
        <item name="colorOnError">@color/white</item>
    </style>

